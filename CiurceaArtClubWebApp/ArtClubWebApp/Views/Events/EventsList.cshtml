
@{
    ViewBag.Title = "EventsList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>EventsList</h2>

<div class="btn btn-success" style="margin-bottom:10px;"><i class="fa fa-plus"></i>Add</div>

<table id="EventsList" class="table table-striped table-bordered">

    <thead>
        <tr>
            <th>Name</th>
            <th>Location</th>
            <th>Schedule</th>
            <th>EDIT/DELETE</th>

        </tr>
    </thead>

    <tbody>
        <tr>
            <td>Presentation</td>
            <td>HeadQuarters</td>
            <td>18-20</td>
            <td>
                <div class="btn btn-success" style="margin-right:10px;">Edit</div><div class="btn btn-danger">Delete</div>
            </td>    
        </tr>
        <tr>
            <td>Dinner</td>
            <td>Tiffany's</td>
            <td>14</td>
            <td>
                <div class="btn btn-success" style="margin-right:10px;">Edit</div><div class="btn btn-danger">Delete</div>
            </td>    
        </tr>
       



    </tbody>

</table>


<link href="https://cdn.datatables.net/1.10.16/css/dataTables.bootstrap4.min.css" rel="stylesheet" />


@section scripts{
    <script src="https://cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.16/js/dataTables.bootstrap4.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#EventsList').DataTable();
        });
    </script>

}
